<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.holike.cloudshelf">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".CurrentApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="q">
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:launchMode="singleTask">
            <!--设置configChanges属性 保持activity横竖屏切换时状态不变，避免onCreate执行多次-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--产品大全-->
        <activity android:name=".activity.ProductCatalogActivity" />

        <activity android:name=".activity.MultiTypeActivity" />
        <activity android:name=".activity.PicturePreviewActivity" />

        <!--晒晒我家-->
        <activity android:name=".activity.BlueprintListActivity" />
        <!--晒晒我家详情-->
        <activity android:name=".activity.BlueprintInfoActivity" />
        <!--搜搜我家-->
        <activity
            android:name=".activity.SoughtHouseActivity"
            android:theme="@style/DefaultCityPickerTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <!--小区户型列表-->
        <activity android:name=".activity.PlotTypeListActivity" />
        <!--城市选择-->
        <activity
            android:name=".activity.CityPickerActivity"
            android:theme="@style/AppCityPickerTheme"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <!--极光推送 jcenter 自动集成步骤-->
        <service
            android:name=".push.PushService"
            android:enabled="true"
            android:exported="false"
            android:process=":pushcore">
            <intent-filter>
                <action android:name="cn.jiguang.user.service.action" />
            </intent-filter>
        </service>

        <receiver
            android:name=".push.PushMessageReceiver"
            android:enabled="true"
            android:exported="false">

            <intent-filter>
                <action android:name="cn.jpush.android.intent.RECEIVE_MESSAGE" />
                <action android:name="cn.jpush.android.intent.REGISTRATION" />

                <category android:name="com.holike.cloudshelf" />
            </intent-filter>
        </receiver>

    </application>

</manifest>