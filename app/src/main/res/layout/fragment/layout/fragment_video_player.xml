<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_01"
    tools:ignore="ContentDescription">

    <tv.lib.ijkplayer.IjkVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        android:textColor="@color/col_03"
        android:textSize="@dimen/sp_10"
        android:visibility="gone" />

    <pony.xcode.widget.CircularProgressView
        android:id="@+id/indicatorView"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="center"
        android:visibility="gone"
        app:cpv_color="@color/colorAccent"
        app:cpv_indeterminate="true"
        app:cpv_thickness="@dimen/dp_2" />

    <ImageView
        android:id="@+id/playCenterView"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_gravity="center"
        android:src="@mipmap/superplayer_ic_play_normal"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/controllerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_8"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_12"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_12"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">

        <ImageView
            android:id="@+id/playStateImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_videos_suspend"
            android:tint="@color/col_03" />

        <SeekBar
            android:id="@+id/sbVideoProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_weight="2"
            android:maxHeight="@dimen/dp_4"
            android:minHeight="@dimen/dp_4"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/bg_seekbar_background"
            android:thumb="@drawable/bg_seekbar_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/timerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:textColor="@color/col_03"
            android:textSize="@dimen/sp_12" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@mipmap/ic_videos_voice_min"
            android:tint="@color/col_03" />

        <SeekBar
            android:id="@+id/sbVoiceProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_weight="1"
            android:maxHeight="@dimen/dp_4"
            android:minHeight="@dimen/dp_4"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progressDrawable="@drawable/bg_seekbar_background"
            android:thumb="@drawable/bg_seekbar_thumb"
            android:thumbOffset="0dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_4"
            android:src="@mipmap/ic_videos_voice_max"
            android:tint="@color/col_03" />
    </LinearLayout>
</FrameLayout>