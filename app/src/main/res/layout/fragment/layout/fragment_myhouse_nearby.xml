<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dp_30"
    android:layout_marginBottom="@dimen/dp_30"
    android:orientation="vertical">

    <include
        layout="@layout/include_main_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/bottomCityLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layoutAnimation="@anim/la_layout_from_bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentCityTView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_45"
            android:drawableEnd="@mipmap/ic_case_right_sel"
            android:drawableRight="@mipmap/ic_case_right_sel"
            android:drawablePadding="@dimen/dp_10"
            android:textColor="@color/col_03"
            android:textSize="@dimen/sp_16" />

        <com.holike.cloudshelf.widget.DrawableTextView
            android:id="@+id/searchTView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:background="@drawable/bg_corners2dp_col21"
            android:drawableStart="@mipmap/ic_search"
            android:drawableLeft="@mipmap/ic_search"
            android:drawablePadding="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_80"
            android:paddingTop="@dimen/dp_10"
            android:paddingRight="@dimen/dp_80"
            android:paddingBottom="@dimen/dp_10"
            android:text="@string/text_tips_search_house"
            android:textColor="@color/col_03"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>
</LinearLayout>