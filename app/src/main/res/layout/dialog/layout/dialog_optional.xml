<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/col_14"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_35"
    android:paddingBottom="@dimen/dp_30">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_45"
        android:layout_weight="1"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_30"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_corners2dp_col03"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/text_cancel2"
            android:textColor="@color/col_03"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:background="@drawable/bg_launch_corners2dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_14"
            android:paddingTop="@dimen/dp_4"
            android:paddingRight="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_4"
            android:text="@string/text_finish"
            android:textColor="@color/col_03"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>
</LinearLayout>