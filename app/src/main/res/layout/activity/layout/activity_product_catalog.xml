<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/containerRL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pic_bg"
    android:paddingStart="@dimen/dp_45"
    android:paddingLeft="@dimen/dp_45"
    android:paddingEnd="@dimen/dp_45"
    android:paddingRight="@dimen/dp_45"
    android:paddingBottom="@dimen/dp_30"
    tools:ignore="ContentDescription">

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:drawableStart="@mipmap/ic_title_products"
        android:drawableLeft="@mipmap/ic_title_products"
        android:drawablePadding="@dimen/dp_6"
        android:text="@string/text_product_catalog"
        android:textColor="@color/col_03"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tv_product"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toStartOf="@+id/rightRL"
        android:layout_toLeftOf="@+id/rightRL"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/contentLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/rightRL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20">

        <include layout="@layout/include_backtrack" />

        <LinearLayout
            android:id="@+id/miniQrLayout"
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/bg_white_corners2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/miniQrUrlIView"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="@string/text_wechat_scan"
                android:textColor="@color/col_06"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>