<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_35"
    android:paddingTop="@dimen/dp_40"
    android:paddingRight="@dimen/dp_35"
    android:paddingBottom="@dimen/dp_40"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dp_80"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_white_corners2dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/miniQrUrlIView"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:text="@string/text_scan_code_view_scheme"
                android:textColor="@color/col_06"
                android:textSize="@dimen/sp_8" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginRight="@dimen/dp_80"
            android:layout_weight="1"
            tools:ignore="NestedWeights">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/previewVP"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/titleTView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/bg_gradient"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingTop="@dimen/dp_24"
                android:paddingRight="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_24"
                android:textColor="@color/col_03"
                android:textSize="@dimen/sp_18" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <pony.xcode.widget.DrawableTextView
                android:id="@+id/viewVideo"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_backtrack"
                android:drawableTop="@mipmap/ic_videosplay"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center"
                android:text="@string/text_video"
                android:textColor="@color/col_10"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <pony.xcode.widget.DrawableTextView
                android:id="@+id/viewPanoramic"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_backtrack"
                android:drawableTop="@mipmap/ic_panorama"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center"
                android:text="@string/text_panoramic"
                android:textColor="@color/col_10"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <include layout="@layout/include_backtrack" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_24">

        <ImageView
            android:id="@+id/preIView"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:src="@mipmap/ic_details_left_sel" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottomRView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:orientation="horizontal"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <ImageView
            android:id="@+id/nextIView"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_32"
            android:layout_gravity="center"
            android:src="@mipmap/ic_details_right_sel" />
    </LinearLayout>

    <TextView
        android:id="@+id/bottomTView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/col_03"
        android:textSize="@dimen/sp_10" />
</LinearLayout>